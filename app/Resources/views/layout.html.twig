<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

        <title>{% block title %}Get Your GreenBack - Tompkins!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/reset.css') }}" type="text/css">
            <link rel="stylesheet" href="{{ asset('styles/styles.css') }}" type="text/css">
            <link type="text/css" href="{{ asset('bundles/sonatajquery/themes/flick/jquery-ui-1.8.6.custom.css') }}" rel="Stylesheet" />	
            <!--[if lte IE 7]>
                <link rel="stylesheet" type="text/css" href="{{ asset('styles/ie7.css') }}" />
                <![endif]-->
            <!--[if lte IE 6]>
                <link rel="stylesheet" type="text/css" href="{{ asset('styles/ie6.css') }}" />
            <![endif]-->
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/libraries/jquery-1.5.1.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/libraries/jquery-ui-1.8.14.custom.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/events.js') }}" type="text/javascript"></script>
        {% endblock %}
        

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>
        {% if(app.session.hasFlash('message')) %}
            <div class="header-message">{{ app.session.getFlash('message') }}</div>
        {% endif %}

        <div id="page-container">
    
            <div id="header" {% if onStaticHome is defined %}class="static-header"{% endif %}>
                <a href="{{ path('home') }}"><img id="logo" src="{{ asset('images/logo.png') }}" /></a>
                
                {% if onStepsPage is defined %}
                    <span style="float: left; clear: both; margin: 10px 0 0 10px; width: 200px;">
                            <a href="{{ path('home') }}">&larr; Home</a>
                    </span>
                {% endif %}
            </div>

            <div id="content">
                {% block content %}{% endblock %}

                <div style="clear: both;"></div>
            </div>

            <div id="footer">
            </div>
        </div>

    </body>

</html>
