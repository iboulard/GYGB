{#<h2>or share your own step</h2>    #}

<div id="custom-step">
    <form action="{{ path('home') }}" method="post" {{ form_enctype(customStepForm) }}>
        {{ form_errors(customStepForm) }}

        {{ form_row(customStepForm.name) }}

        {{ form_row(customStepForm.step) }}

        <br/>
        What area was your step in?
        <div class="category-selections">
            {% for category in categoryNames %}
               <a href="#" title="{{ category }}">
                <div class="category-selection" id="{{ category }}"><img src="{{ asset('images/' ~ categoryIcons[category] ~ '-small.png') }}" /></div>
               </a>
            {% endfor %}
        </div>
        
        <span style="float: left; margin-top: 6px;">How much money did you save?</span>
        <div class="savings-selections">
            <a href="#" title="small amount"><div class="savings-selection" id="low">$</div></a>
            <a href="#" title="medium amount"><div class="savings-selection" id="medium">$$</div></a>
            <a href="#" title="large amount"><div class="savings-selection" id="high">$$$</div></a>
        </div>
            
       {# <span style="text-align: center; width: 100%; float: left;">or pick a common step:</span>
        
        {% include "GYGBFrontBundle:Home:_basicSteps.html.twig" with {'basicSteps' : basicSteps} %} #}
    

        {{ form_rest(customStepForm) }}
        <input class="button submit" value="Share" type="submit" />
    </form>

  
</div>