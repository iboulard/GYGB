
    <div id="steps" style="width: 52%; float: left; margin-bottom: 20px; background: white; border-radius: 10px;">
        <form>
        <fieldset style="-moz-border-radius: 7px; padding: 4px 0;">
        {#<legend style="font-size: 20px; color: green; font-weight: bold; margin-left: 27%; padding: 0 5px;">Recent Steps Taken</legend>#}
                
        {% for recentStep in recentSteps %}
            <a class="step-box-link" href="{{ path('steps') }}">
                <div class="step {{ recentStep.step.category }} {% if loop.first %}first{% endif %}">
                {% if recentStep.step.savingsLabel %}<span class="savings">{{ recentStep.step.savingsLabel }}</span>{% endif %}
                <span class="step" style="width: 200px;">{{ recentStep.name }}{% if not recentStep.step.stepStartsWithI %}:{% endif %}
                {{ recentStep.step.abbrvStep }}</span>
                <span class="date">{{ recentStep.datetimeSubmitted|date("F j, Y g:i") }}</span>
            </div>
            </a>
        {% endfor %}
            {% if recentSteps %}
            <div class="step" style="border-bottom: none; text-align: center;">
                <span class="step" style=""><a href="{{ path('steps') }}" style="color: #0066cc;">See more steps &rarr;</a></span>
            </div>
            {% endif %}
        </fieldset>
        </form>
    </div>
